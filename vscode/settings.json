{
  // General options
  "files.insertFinalNewline": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.formatOnSave": true,
  "editor.autoClosingBrackets": "never",
  "files.autoSave": "afterDelay",
  "problems.showCurrentInStatus": true,
  "debug.allowBreakpointsEverywhere": true,
  // Look and feel
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.iconTheme": "catppuccin-frappe",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "editor.fontFamily": "FiraCode Nerd Font, Fira Code, Menlo, monospace",
  "editor.fontLigatures": true,
  "editor.minimap.maxColumn": 80,
  "editor.rulers": [
    80,
    120
  ],
  //
  "C_Cpp.clang_format_sortIncludes": true,
  "cmake.configureOnOpen": true,
  "cmake.generator": "Visual Studio 17 2022",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  // Formatting and linting
  "prettier.tabWidth": 4,
  //
  "go.autocompleteUnimportedPackages": true,
  "go.formatTool": "gofumpt",
  "go.formatFlags": [
    "-s"
  ],
  "go.lintOnSave": "package",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  "go.testFlags": [
    "-v"
  ],
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "experimentalWorkspaceModule": true,
    "build.directoryFilters": [
      "-bazel-bin",
      "-bazel-out",
      "-bazel-src",
      "-bazel-testlogs",
      "-**/node_modules",
    ],
  },
  //
  // macOS
  // "monkeyC.developerKeyPath": "/Users/simon/.ciq/developer_key.der",
  // Windows
  "monkeyC.developerKeyPath": "c:\\Users\\simon\\connect-id\\developer_key.der",
  "monkeyC.typeCheckLevel": "Strict",
  //
  "python.terminal.activateEnvironment": false,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "python.languageServer": "Default",
  "ruff.lineLength": 88,
  //
  // Neovim - Using this on macOS and Linux
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/simon/git/dotfiles/vscode/init.vim",
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/simon/.config/nvim/init.vim",
  // Vim - Using this on Windows
  "vim.autoindent": true,
  "vim.hlsearch": true,
  "vim.ignorecase": true,
  "vim.incsearch": true,
  "vim.leader": "<space>",
  "vim.showcmd": true,
  "vim.textwidth": 80,
  // Rust
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.enable": false,
  //
  "haskell.formattingProvider": "brittany",
  //
  "Lua.telemetry.enable": false,
  "Lua.diagnostics.globals": [
    "playdate",
    "import"
  ],
  "Lua.workspace.library": [
    "${env:HOME}/Developer/PlaydateSDK/CoreLibs"
  ],
  "Lua.runtime.nonstandardSymbol": [
    "+=",
    "-=",
    "*=",
    "/="
  ],
  //
  // Typescript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[proto3]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "gitlens.currentLine.enabled": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
}
