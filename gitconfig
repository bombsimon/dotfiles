[user]
  name = Simon Sawert
  email = simon@sawert.se
  signingkey = 9FDB4E07D9DACC91

[includeIf "gitdir:~/workspace/"]
  path = .gitconfig.work

[alias]
  s           = status
  as          = commit -a --amend --no-edit
  co          = checkout
  pf          = push --force-with-lease
  ls          = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  flog        = log --oneline --decorate=full --graph
  log1        = log --oneline
  latest      = log -1 --pretty=%B
  nosign      = -c commit.gpgsign = false commit
  ignore      = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
  pushup      = "!git push -u origin $(git branch-name)"
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  remote-info = "!for branch in $(git branch -r | egrep -v 'HEAD|develop|stage|master'); do \
    git show --format=\"%<(25)%an %<(15)%ar %s %d\" $branch | head -1; \
    done"
[core]
  pager = less -R
  editor = nvim
  excludesfile = ~/.gitignore
[color]
  ui = auto
[commit]
  gpgsign = true
[diff]
  colorMoved = true
[fetch]
  prune = true
[pager]
  branch = false
[push]
  default = tracking

[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org/

